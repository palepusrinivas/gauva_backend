<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

  <property name="LOG_PATH" value="${app.logging.log-path:-logs}" />
  <property name="LOG_LEVEL" value="${app.logging.level:WARN}" />

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{cid}] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/app.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!-- Daily rollover, multiple files per day if size exceeds limit -->
      <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <!-- Keep per-file size aligned with Firebase log upload limit (default 5MB) -->
      <maxFileSize>5MB</maxFileSize>
      <maxHistory>14</maxHistory>
      <totalSizeCap>2GB</totalSizeCap>
      <cleanHistoryOnStart>true</cleanHistoryOnStart>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{cid}] %logger{36} - %msg%n</pattern>
    </encoder>
    <append>true</append>
  </appender>

  <logger name="com.ridefast" level="INFO" additivity="false">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="ROLLING"/>
  </logger>

  <root level="WARN">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="ROLLING"/>
  </root>
</configuration>
